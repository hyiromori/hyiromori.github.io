{
  "author": "hyiromori",
  "dependencies": {
    "ejs": "^2.6.1",
    "ejs-lint": "^0.3.0",
    "express": "^4.16.4",
    "foreman": "^3.0.1",
    "fs-extra": "^7.0.1",
    "js-yaml": "^3.12.0",
    "jsdom": "^13.2.0",
    "marked": "^0.5.2",
    "node-fetch": "^2.3.0",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.7",
    "xml2js": "^0.4.19"
  },
  "scripts": {
    "start": "nf start --procfile ./resource/scripts/Procfile",
    "build": "npm run build:laboratory && npm run build:scss && npm run build:ejs && npm run build:blog",
    "build:blog": "node ./resource/scripts/handlers/blog.js",
    "build:ejs": "node ./resource/scripts/handlers/ejs.js",
    "build:laboratory": "cd ./laboratory/react && npm run build",
    "build:scss": "node ./resource/scripts/handlers/scss.js",
    "express": "node ./resource/scripts/handlers/express.js",
    "hatena": "node ./resource/scripts/scripts/publish.js",
    "watch:blog": "nodemon --watch ./blog/ --watch ./assets/css --ext ejs.html,css --exec 'npm run build:blog'",
    "watch:ejs": "nodemon --watch ./ --ext md,css,ejs.html,ejs.js --ignore **/blog/** --exec 'npm run build:ejs'",
    "watch:laboratory": "cd ./laboratory/react && npm run watch",
    "watch:scss": "nodemon --watch ./assets/css/scss/ --ext scss --exec 'npm run build:scss'"
  }
}
