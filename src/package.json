  "dependencies": {
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "foreman": "^3.0.1",
    "fs-extra": "^7.0.1",
    "js-yaml": "^3.12.0",
    "marked": "^0.5.2",
