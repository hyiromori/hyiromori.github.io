    "build:resource": "node ./scripts/convert.js",
    "express:dev": "NODE_ENV=development node ./scripts/express.js",
    "express:prod": "NODE_ENV=production node ./scripts/express.js",
    "hatena": "node ./scripts/publish.js",
    "watch:laboratory": "NODE_ENV=development cd ./laboratory && npm run watch",
    "watch:resource": "NODE_ENV=development nodemon --watch ./ --ext md,html,scss,js --exec 'npm run build:resource'"
  }
